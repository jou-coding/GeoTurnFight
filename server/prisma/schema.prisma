generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User{
  id Int @id @default(autoincrement()) 
  name String @unique
  password String
}

model Contry{
  id Int @id @default(autoincrement())
  name String
}

model Room{
  id Int @id @default(autoincrement())
  name String
  playerCount Int @default(1)
  maxPlayer Int @default(4)
  status String @default("waiting")
}

model Country {
  id      Int     @id @default(autoincrement())
  code    String  @unique    // ISO 3166-1 alpha-2 (JP, US, ...)
  nameJa  String
  nameEn  String
  isOecd  Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
