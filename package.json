{
  "name": "mygame",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev:client": "npm --prefix ./client run dev",
    "dev:server": "npm --prefix ./server run dev",

    "build": "npm run build:client && npm run build:server",
    "build:client": "npm --prefix ./client run build",
    "build:server": "npm --prefix ./server run build",

    "install:all": "npm --prefix ./client install && npm --prefix ./server install",

    "prisma:generate": "npx --prefix ./server prisma generate",
    "db:migrate:dev": "npx --prefix ./server prisma migrate dev",
    "db:migrate:deploy": "npx --prefix ./server prisma migrate deploy",
    "db:seed": "npx --prefix ./server prisma db seed",
      
    "setup:local": "npm run install:all && npm run prisma:generate && npm run db:migrate:dev && npm run db:seed && npm run build",
    "setup":"npm --prefix server install && npx --prefix server prisma generate && npx --prefix server prisma migrate deploy && npm --prefix server run build",

    "start": "npm --prefix ./server run start"
  },
  "repository": {
    "type": "git",
